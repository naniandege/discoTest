<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true"
    android:padding="@dimen/dp_5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="wrap_content"
                        android:text="人员姓名：" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="wrap_content"
                        android:text="人员姓名：" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="wrap_content"
                        android:text="打卡距离：" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人员姓名：" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2">

                <TextView
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:text="打卡时间：" />

                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人员姓名：" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:text="上班地点：" />

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人员姓名：" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="wrap_content"
                        android:text="上班/下班:" />

                    <TextView
                        android:id="@+id/work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人员姓名：" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:text="外勤/内勤:" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="人员姓名：" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fieldLocation_linne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="wrap_content"
                        android:text="外勤地点：" />

                    <TextView
                        android:id="@+id/fieldLocation"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:text="人员姓名：" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
               android:id="@+id/fieldThat_linne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="wrap_content"
                    android:text="外勤说明：" />

                <TextView
                    android:id="@+id/fieldThat"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="人员姓名：" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
