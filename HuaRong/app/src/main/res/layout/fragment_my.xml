<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MyFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/c_0779e4" />
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/my_shape">

        <ImageView
            android:id="@+id/header"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/login1" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/header"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toRightOf="@id/header"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header"
            android:layout_toRightOf="@id/header"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/miao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/zhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/miao"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cad"
        cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/yi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_margin="@dimen/dp_20"
                    android:src="@drawable/gouwu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/yigou"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="right"
                    android:text=">"
                    android:textColor="@color/c_333333" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/c_fofofo"></View>

            <LinearLayout
                android:id="@+id/collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_margin="@dimen/dp_20"
                    android:src="@drawable/baozang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/shoucang"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="right"
                    android:text=">"
                    android:textColor="@color/c_333333" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/c_fofofo"></View>

            <LinearLayout
                android:id="@+id/set_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_margin="@dimen/dp_20"
                    android:src="@drawable/guanzhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="设置工作地点"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="right"
                    android:text=">"
                    android:textColor="@color/c_333333" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/c_fofofo"></View>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cad"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_margin="@dimen/dp_20"
                    android:src="@drawable/went" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审批短信提醒"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40">

                    <TextView
                        android:id="@+id/sms_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短信提醒"
                        android:textColor="@color/c_a9a9a9"
                        android:textSize="@dimen/sp_14" />


                    <com.github.iielse.switchbutton.SwitchView
                        android:id="@+id/switchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_gravity="center_vertical"
                        app:offColor="@color/grey"
                        app:offColorDark="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_22"
                        android:gravity="right"
                        android:text=">"
                        android:textColor="@color/c_333333" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/c_fofofo"></View>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

